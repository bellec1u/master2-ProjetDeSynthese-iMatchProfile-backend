<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="imp-test-pu" transaction-type="RESOURCE_LOCAL">
    <class>imp.core.entity.Exemple</class>
    <class>imp.core.entity.Skill</class>
    <class>imp.core.entity.conversation.Comment</class>
    <class>imp.core.entity.conversation.Conversation</class>
    <class>imp.core.entity.conversation.Message</class>
    <class>imp.core.entity.post.Post</class>
    <class>imp.core.entity.post.PostSkill</class>
    <class>imp.core.entity.report.CommentReport</class>
    <class>imp.core.entity.report.ConversationReport</class>
    <class>imp.core.entity.report.PostReport</class>
    <class>imp.core.entity.report.UserReport</class>
    <class>imp.core.entity.user.Candidate</class>
    <class>imp.core.entity.user.Recruiter</class>
    <class>imp.core.entity.user.User</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/sample"/>
      <property name="javax.persistence.jdbc.user" value="app"/>
      <property name="javax.persistence.jdbc.password" value="app"/>
    </properties>
  </persistence-unit>
</persistence>
